<div class="container-fluid full-height">
  <div class="row full-height">
    <div class="col-sm-2 sidenav full-height">
      <ul class="nav nav-pills nav-stacked nav-pages">
        <li class="active"><a href="#">Sample Page 1</a></li>
        <li><a href="#">Sample Page 2</a></li>
        <li><a href="#">Add a new page</a></li>
      </ul>
    </div>
    <div class="col-sm-10 main full-height">
      <form class="form-horizontal" role="form">
        <fieldset class="form-group">
          <legend>Page</legend>
          <div class="form-group">
            <label class="control-label col-sm-2" for="page-address">address:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="page-address" placeholder="Put page url here">
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="button" class="btn btn-default">Use SelectorGadget to find CSS selectors</button>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="page-title">title:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="page-title" placeholder="Leave blank to fill automatically">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="page-description">description:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="page-description" placeholder="Leave blank to fill automatically">
            </div>
          </div>
        </fieldset>
        <fieldset class="form-group">
          <legend>Article</legend>
          <div class="form-group">
            <label class="control-label col-sm-2" for="article-whole">whole article:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="article-whole" placeholder="Put CSS selector here">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="article-address">address:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="article-address" placeholder="Put CSS selector here">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="article-title">title:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="article-title" placeholder="Put CSS selector here">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="article-description">description:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="article-description" placeholder="Put CSS selector here">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="article-pubdate">publication date:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="article-pubdate" placeholder="Put CSS selector here">
            </div>
          </div>
        </fieldset>
        <div class="form-group">
          <div class="col-sm-12 text-center">
            <button type="submit" class="btn btn-default">Build RSS feed</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
